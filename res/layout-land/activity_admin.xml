<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout_write"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <EditText
                android:id="@+id/announce_title"
                android:layout_width="400dp"
                android:layout_height="50dp"
                android:text="제목"
                android:layout_marginRight="20dp"
                android:backgroundTint="@color/yellowMain"
                android:layout_gravity="bottom|left"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/yellow_header"
                android:gravity="right">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:text="공지 작성"
                    android:fontFamily="@font/ssangmundong"
                    android:textSize="40sp"
                    android:textColor="#000"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="right"/>

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center_vertical|right"
                    android:gravity="right"
                    android:src="@drawable/pencil" />

            </LinearLayout>



        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"

        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="450dp"
            android:layout_height="300dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/yellow_post">

            <EditText
                android:id="@+id/announce_post"
                android:layout_width="match_parent"
                android:layout_height="272dp"
                android:layout_margin="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@null"
                android:fontFamily="@font/unigothic"
                android:gravity="top|left"
                android:textSize="15sp"
                tools:ignore="RtlHardcoded" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">


            <Button
                android:id="@+id/announce_button"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/square_yellow_button"
                android:fontFamily="@font/unigothic"
                android:text="등록"
                android:textColor="#FFF" />

        </LinearLayout>

    </LinearLayout>



</LinearLayout>
